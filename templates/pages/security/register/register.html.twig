{% extends 'base.html.twig' %}

{% block  title %} Register {% endblock %}
{% block body %}



    <div class="container lt-4" style="padding-top: 5%">

{#        <a href="{{ path('facebook_auth') }}">#}
{#            <span>Login with Fcebook</span>#}
{#        </a>#}

        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">{{ form_row(form.name) }}</div>
                <div class="col-md-4">{{ form_row(form.email) }}</div>
                <div class="col-md-4">{{ form_row(form.password) }}</div>
            </div>

            <div class="row">
            <div class="col-md-6">{{ form_row(form.mobile_phone) }}</div>
            <div class="col-md-6">{{ form_row(form.logo) }}</div>
            </div>

            {%  if ( type == 1 ) %}
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.birthday_date) }}</div>
                </div>
             {% endif %}



        <button class="btn btn-primary"> {{ button|default('users.create')|trans({},'security') }} </button>
        {{ form_end(form) }}
    </div>


{% endblock %}

