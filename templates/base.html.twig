<!DOCTYPE html>
<html {% if app.request.locale == "ar" %} dir="rtl" lang="ar" {% endif %}>


<head>

    <meta charset="UTF-8">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />


    <link rel="stylesheet" href="{{ asset("bootstrap.css","css") }}" />
    <script src="{{ asset("bootstrap.js","js") }}"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/5cc306fe6a.js" crossorigin="anonymous"></script>


    <title>{% block title %} {% endblock %}</title>
    <link rel="stylesheet" href="{{ asset("bootstrap.css",'css') }}" />
    <link rel="stylesheet" href="{{ asset("all.css",'css') }}" />
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
    <link rel="stylesheet" href="{{ asset("styles.css",'css') }}" />


    {% block stylesheets %}

    {% endblock %}

    {% block javascripts %}
    {% endblock %}

</head>

{% trans_default_domain 'index' %}

<body >


{% set route = app.request.attributes.get('_route') %}
{% set route_params = app.request.attributes.get('_route_params') %}
{% set params = route_params|merge(app.request.query.all) %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path("home") }}">
            <img src="{{ asset("Logo CIE.png","ressource_images_index") }}" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse navbar-items" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nb1 nav-link active" aria-current="page" href="{{ path('home') }}#home">{% trans %} home {% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a class="nb2 nav-link" href="{{ path('home') }}#about">{% trans %} about {% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a class="nb3 nav-link" href="{{ path('home') }}#service">{% trans %} services {% endtrans %}</a>
                </li>
                <li class="nav-item">
                    <a class="nb4 nav-link" href="{{ path('home') }}#contact">{% trans %} contact {% endtrans %}</a>
                </li>

                {% if not app.user  %}
                    <li class="nav-item">
                        <a class="nb4 nav-link" href="{{ path('user.login') }}">{% trans %} login {% endtrans %}</a>
                    </li>
                 {% endif %}

                {% if is_granted('ROLE_MODERATOR') %}

                    <li class="nav-item">
                        <a class="nb4 nav-link" href="{{ path('admin.products.show') }}">{% trans %} Admin {% endtrans %}</a>
                    </li>

                {% endif %}

            </ul>
            <div class="navbar-text">
                <ul class="icon-social">
                    <li><i class="fab fa-facebook"></i></li>
                    <li><i class="fab fa-twitter"></i></li>
                    <li><i class="fab fa-instagram"></i></li>
                </ul>
                 <a href="{{ path("home",params|merge({ _locale: 'fr' })) }}"><span class="lang {% if app.request.locale == "fr" %} active {% endif %}">{% trans %} french {% endtrans %}</span></a>
                <span class="lang lang-sp"> | </span>
                <a href="{{ path("home",params|merge({ _locale: 'ar' })) }}"><span class="lang {% if app.request.locale == "ar" %} active {% endif %}">{% trans %} arabic {% endtrans %}</span></a>
            </div>
        </div>
    </div>
</nav>




{% block body %}

{% endblock %}

{% block script %}

{% endblock %}

{% block footer %}

{% endblock %}
</body>



</html>
